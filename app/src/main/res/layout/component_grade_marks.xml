<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffeeee">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestModuleDesc"/>
    </LinearLayout>
    <TableLayout
        android:background="#ffeeff"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="0, 1">
        <TableRow>
            <TextView style="@style/gradeTableCell" android:text="Week #"/>
            <TextView style="@style/gradeTableCell" android:text="Task Type"/>
            <TextView style="@style/gradeTableCell" android:text="Marks 1"/>
            <TextView style="@style/gradeTableCell" android:text="Marks 2"/>
        </TableRow>
    </TableLayout>
</LinearLayout>