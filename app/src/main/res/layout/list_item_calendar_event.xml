<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:minHeight="70dp"
    android:gravity="start"
    android:layout_margin="12dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/event_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
    <TextView
        android:id="@+id/event_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/calendar_event_text_offset_from_header"
        android:stretchColumns="1"
        android:gravity="center">
        <TableRow android:id="@+id/event_summary_row">
            <TextView
                android:id="@+id/header_event_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_event_summary" />
            <TextView
                android:id="@+id/event_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow android:id="@+id/event_location_row">
            <TextView
                android:id="@+id/header_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_event_location" />
            <TextView
                android:id="@+id/event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/event_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>
</LinearLayout>