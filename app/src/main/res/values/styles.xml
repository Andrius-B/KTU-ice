<resources>

    <!-- Base application theme. -->
    <style name="iceTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!--<style name="iceTheme" parent="Theme.AppCompat.DayNight.NoActionBar">-->
        <item name="android:windowBackground">@drawable/background</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorPrimary">@color/colorDarkPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorDarkAccent</item>-->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="iceLoginTheme" parent="iceTheme">
        <item name="android:background">@drawable/splash</item>
    </style>

    <style name="mainActivityCardStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="darkIceTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>

        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryDark">@color/colorDarkPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>
